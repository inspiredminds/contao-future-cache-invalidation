{
    "name": "inspiredminds/contao-future-cache-invalidation",
    "description": "Invalidates cache tags in the future for any DCA in Contao that has a `start` or `stop` field.",
    "type": "contao-bundle",
    "license": "LGPL-3.0-or-later",
    "homepage": "https://github.com/inspiredminds/contao-future-cache-invalidation",
    "authors": [
        {
            "name": "Fritz Michael Gschwantner",
            "email": "fmg@inspiredminds.at",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/inspiredminds/contao-future-cache-invalidation/issues",
        "source": "https://github.com/inspiredminds/contao-future-cache-invalidation",
        "forum": "https://community.contao.org/de"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/fritzmg"
        }
    ],
    "require": {
        "php": ">=8.1",
        "contao/core-bundle": "^4.13 || ^5.0",
        "nyholm/psr7": "^1.8",
        "symfony/config": "^5.4 || ^6.4 || ^7.1",
        "symfony/dependency-injection": "^5.4 || ^6.4 || ^7.1",
        "symfony/http-foundation": "^5.4 || ^6.4 || ^7.1",
        "symfony/http-kernel": "^5.4 || ^6.4 || ^7.1",
        "symfony/messenger": "^5.4 || ^6.4 || ^7.1"
    },
    "autoload": {
        "psr-4": {
            "InspiredMinds\\ContaoFutureCacheInvalidation\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "InspiredMinds\\ContaoFutureCacheInvalidation\\ContaoManager\\Plugin"
    },
    "require-dev": {
        "contao/easy-coding-standard": "^6.0",
        "contao/rector": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": false,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "contao-community-alliance/composer-plugin": true
        }
    }
}
